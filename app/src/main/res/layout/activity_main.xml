<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hiray.toolbar.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.hiray.toolbar.CenterTitleToolbar
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:layout_height="?actionBarSize"
            app:navigationIcon="@mipmap/icon_nav_back"
            app:titleTextAppearance="@style/CustomizedToolBarTextAppearance"
            app:title="CenterTitleToolBar" />
    </android.support.design.widget.AppBarLayout>

</FrameLayout>
